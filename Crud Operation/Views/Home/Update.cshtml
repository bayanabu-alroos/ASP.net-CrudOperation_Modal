<div class="modal fade" id="UpdateModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Update Product</h1>
                <button type="button" class="btn btn-link" data-bs-dismiss="modal" aria-label="Close">X</button>
            </div>
            <form asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden"  name="id" id="selectedMangeItemId" />
                    <div class="input-group input-group-outline my-3">
                        <label class="form-label">Name</label>
                        <input type="text" id="selectedItemName" name="Name" class="form-control">
                    </div>
                    <div class="input-group input-group-outline my-3">
                        <input type="file" id="selectedItemImageUrl" name="imageFile" class="form-control">
                    </div>
                    <div class="input-group input-group-outline my-3">
                        <label class="form-label">Category</label>
                        <select type="text" name="Category" class="form-control">
                            <option></option>
                            <option value="0">Male</option>
                            <option value="1">Female</option>
                        </select>
                    </div>
                    <di class="input-group input-group-outline my-3">
                        <label class="form-label">Description</label>
                        <textarea type="text" id="selectedItemDescription" name="Description" class="form-control"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>